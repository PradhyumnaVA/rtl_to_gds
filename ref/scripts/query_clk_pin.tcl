foreach_in_collection my_pin [get_pins *] {                                                                                                                                                                                                      set pin_name [get_object_name $my_pin];                                                                                                                                                                            set dir [get_attribute $pin_name direction];                                                                                                                                                       if { [regexp $dir in] } {                                                                                                                                                                                  set cpin [get_attribute [get_pins $pin_name] clock];                                                                                                                                                               if { $cpin } {                                                                                                                                                                                                     echo "$pin_name is a clk pin";                                                                                                                                                                                     }                                                                                                                                                                                                                  }                                                                                                                                                                                                                  }

